<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtShop_Name"
        android:hint="Shop Name"
         />

    <EditText
        android:layout_below="@+id/txtShop_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtInventory"
        android:hint="InventoryName"/>

    <EditText
        android:layout_below="@+id/txtInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLatitude"
        android:hint="Latitude"/>

    <EditText
        android:layout_below="@+id/txtLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLongitude"
        android:hint="Longitude"
        />

    <Button
        android:layout_below="@id/txtLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RegisterShop"
        android:id="@+id/btn_registershop"
        />



</RelativeLayout>
